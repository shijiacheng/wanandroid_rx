<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
>

    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="@dimen/padding_middle">


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="@dimen/padding_middle"
        >
            <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="正文"
                    android:textSize="@dimen/font_h4"
                    android:textColor="@color/mainText"
                    android:maxLines="3"
            />

            <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="sjokoacjemg"
                    android:textSize="@dimen/font_h5"
                    android:textColor="@color/mainTextGray"
                    android:layout_marginTop="@dimen/padding_middle"
                    android:lines="1"
            />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>