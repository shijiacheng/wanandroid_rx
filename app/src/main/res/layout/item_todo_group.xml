<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:minHeight="?attr/actionBarSize"
                android:paddingLeft="@dimen/padding_small"
                android:paddingRight="@dimen/padding_small"
                android:paddingTop="@dimen/padding_middle"
                android:id="@+id/root">

    <ImageView
            android:id="@+id/view_item_group_iv"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/padding_middle"
            android:background="@drawable/ic_expand_arrow"
            android:contentDescription="@string/app_name"
            android:scaleType="centerInside" />


    <TextView
            android:id="@+id/view_item_group_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/padding_small"
            android:layout_toRightOf="@id/view_item_group_iv"
            android:singleLine="true"
            android:textColor="@color/mainText"
            android:textSize="@dimen/font_h4" />

    <View
            android:id="@+id/hr"
            android:layout_width="match_parent"
            android:background="@color/hr"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="@dimen/padding_middle"
            android:visibility="invisible" />

</RelativeLayout>